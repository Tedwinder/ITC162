<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="10dp"
    
    tools:context="com.example.christinac.tictactoegame.TicTacToeActivity"
    android:id="@+id/por_layout">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/button1"
                android:id="@+id/button"
                android:layout_column="0" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/botton2"
                android:id="@+id/button2"
                android:layout_column="1" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/button3"
                android:id="@+id/button3"
                android:layout_column="2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/button4"
                android:id="@+id/button4"
                android:layout_column="0" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/button5"
                android:id="@+id/button5"
                android:layout_column="1" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/button6"
                android:id="@+id/button6"
                android:layout_column="2" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/button7"
                android:id="@+id/button7"
                android:layout_column="0" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/button8"
                android:id="@+id/button8"
                android:layout_column="1" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/button9"
                android:id="@+id/button9"
                android:layout_column="2" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:text=""
        android:textSize="25sp"
        android:id="@+id/messageTextView"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/newGameButton"
        android:layout_alignStart="@+id/newGameButton"
        android:layout_alignRight="@+id/newGameButton"
        android:layout_alignEnd="@+id/newGameButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:text="@string/new_game"
        android:textSize="25sp"
        android:id="@+id/newGameButton"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_above="@+id/messageTextView"
        android:layout_toRightOf="@+id/tableLayout"
        android:layout_toEndOf="@+id/tableLayout"
        android:layout_marginLeft="63dp"
        android:layout_marginStart="63dp" />



</RelativeLayout>
